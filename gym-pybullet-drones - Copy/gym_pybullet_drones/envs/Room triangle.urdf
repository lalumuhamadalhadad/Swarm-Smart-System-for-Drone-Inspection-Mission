<?xml version="1.0"?>
<robot name="parallelogram_layout">

  <!-- Floor remains the same -->
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0.2"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0.2"/>
      <geometry>
        <box size="15 15 0.1"/>
      </geometry>
      <material name="floor_texture">
        <texture filename="file:///D:/Documents/ITB/S2/Semester%202/Thesis%202/gym-pybullet-drones/gym_pybullet_drones/envs/floortexture.png"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0.2"/>
      <geometry>
        <box size="15 15 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Top and bottom walls (no rotation needed) -->
  <link name="outer_wall_1">
    <visual>
      <origin xyz="-1.5 7.5 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="15 0.1 3"/>
      </geometry>
      <material name="wall_color">
        <color rgba="0.9 0.9 0.9 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-1.5 7.5 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="15 0.1 3"/>
      </geometry>
    </collision>
  </link>

  <link name="outer_wall_2">
    <visual>
      <origin xyz="1.5 -7.5 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="15 0.1 3"/>
      </geometry>
      <material name="wall_color"/>
    </visual>
    <collision>
      <origin xyz="1.5 -7.5 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="15 0.1 3"/>
      </geometry>
    </collision>
  </link>

  <!-- Slanted left and right walls (rotate around Z-axis slightly) -->
  <link name="outer_wall_3">
    <visual>
      <origin xyz="7.2 0 1.5" rpy="0 0 0.2"/> <!-- Slight Z-rotation for parallelogram -->
      <geometry>
        <box size="0.1 15 3"/>
      </geometry>
      <material name="wall_color"/>
    </visual>
    <collision>
      <origin xyz="7.2 0 1.5" rpy="0 0 0.2"/>
      <geometry>
        <box size="0.1 15 3"/>
      </geometry>
    </collision>
  </link>

  <link name="outer_wall_4">
    <visual>
      <origin xyz="-7.2 0 1.5" rpy="0 0 0.2"/> <!-- Mirror Z-rotation -->
      <geometry>
        <box size="0.1 15 3"/>
      </geometry>
      <material name="wall_color"/>
    </visual>
    <collision>
      <origin xyz="-7.2 0 1.5" rpy="0 0 -0.2"/>
      <geometry>
        <box size="0.1 15 3"/>
      </geometry>
    </collision>
  </link>

  <!-- Fixed joints -->
  <joint name="base_to_outer_wall_1" type="fixed">
    <parent link="base_link"/>
    <child link="outer_wall_1"/>
  </joint>

  <joint name="base_to_outer_wall_2" type="fixed">
    <parent link="base_link"/>
    <child link="outer_wall_2"/>
  </joint>

  <joint name="base_to_outer_wall_3" type="fixed">
    <parent link="base_link"/>
    <child link="outer_wall_3"/>
  </joint>

  <joint name="base_to_outer_wall_4" type="fixed">
    <parent link="base_link"/>
    <child link="outer_wall_4"/>
  </joint>

</robot>
