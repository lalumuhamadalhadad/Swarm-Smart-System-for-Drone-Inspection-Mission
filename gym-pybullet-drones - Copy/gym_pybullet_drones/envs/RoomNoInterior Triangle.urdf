<?xml version="1.0"?>
<robot name="triangular_maze_layout">

  <!-- Define the triangular base link (floor) -->
  <link name="base_link">
    <inertial>
      <mass value="100.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="100.0" ixy="0.0" ixz="0.0" iyy="100.0" iyz="0.0" izz="100.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="17 17 0.1"/> <!-- Simple square floor base -->
      </geometry>
      <material name="floor_material">
        <color rgba="0.9 0.9 0.9 1"/> <!-- Light gray floor -->
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="17 17 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Bottom Wall (base of triangle, horizontal) -->
  <link name="wall_1">
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 -4.33 1.5" rpy="0 0 0"/>
      <inertia ixx="10.0" ixy="0.0" ixz="0.0" iyy="10.0" iyz="0.0" izz="10.0"/>
    </inertial>
    <visual>
      <origin xyz="0 -4.33 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="15 0.2 3"/>
      </geometry>
      <material name="wall_material">
        <color rgba="0.8 0.4 0.2 1"/> <!-- Brown walls -->
      </material>
    </visual>
    <collision>
      <origin xyz="0 -4.33 1.5" rpy="0 0 0"/>
      <geometry>
        <box size="15 0.2 3"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wall (60 degrees from horizontal) -->
  <link name="wall_2">
    <inertial>
      <mass value="10.0"/>
      <origin xyz="-3.75 2.165 1.5" rpy="0 0 0"/>
      <inertia ixx="10.0" ixy="0.0" ixz="0.0" iyy="10.0" iyz="0.0" izz="10.0"/>
    </inertial>
    <visual>
      <origin xyz="-3.75 2.165 1.5" rpy="0 0 1.047"/>
      <geometry>
        <box size="15 0.2 3"/>
      </geometry>
      <material name="wall_material">
        <color rgba="0.8 0.4 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-3.75 2.165 1.5" rpy="0 0 1.047"/>
      <geometry>
        <box size="15 0.2 3"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wall (-60 degrees from horizontal) -->
  <link name="wall_3">
    <inertial>
      <mass value="10.0"/>
      <origin xyz="3.75 2.165 1.5" rpy="0 0 0"/>
      <inertia ixx="10.0" ixy="0.0" ixz="0.0" iyy="10.0" iyz="0.0" izz="10.0"/>
    </inertial>
    <visual>
      <origin xyz="3.75 2.165 1.5" rpy="0 0 -1.047"/>
      <geometry>
        <box size="15 0.2 3"/>
      </geometry>
      <material name="wall_material">
        <color rgba="0.8 0.4 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="3.75 2.165 1.5" rpy="0 0 -1.047"/>
      <geometry>
        <box size="15 0.2 3"/>
      </geometry>
    </collision>
  </link>

  <!-- Floor crack/damage patch -->
  <link name="crack_patch">
    <visual>
      <origin xyz="-2 -2 0.051" rpy="0 0 1.57"/>
      <geometry>
        <box size="1 0.1 0.002"/>
      </geometry>
      <material name="crack_material">
        <color rgba="0.3 0.2 0.1 1"/> <!-- Dark brown crack -->
      </material>
    </visual>
  </link>

  <!-- Fixed joints -->
  <joint name="base_to_wall_1" type="fixed">
    <parent link="base_link"/>
    <child link="wall_1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_wall_2" type="fixed">
    <parent link="base_link"/>
    <child link="wall_2"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_wall_3" type="fixed">
    <parent link="base_link"/>
    <child link="wall_3"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_crack_patch" type="fixed">
    <parent link="base_link"/>
    <child link="crack_patch"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>